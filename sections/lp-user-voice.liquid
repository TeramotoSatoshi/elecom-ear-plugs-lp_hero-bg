<section class="user-voice" data-section-type="lp-user-voice" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="section-header">
        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="user-voice__slider swiper" role="region" aria-label="ユーザーボイススライダー">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'user_voice_card' %}
              <div class="swiper-slide" {{ block.shopify_attributes }}>
                <div class="user-voice__card">
                  {% if block.settings.tag != blank %}
                    <div class="user-voice__tag">{{ block.settings.tag }}</div>
                  {% endif %}
                  {% if block.settings.testimonial != blank %}
                    <div class="user-voice__card-title">{{ block.settings.testimonial }}</div>
                  {% endif %}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="user-voice__pagination"></div>
    </div>

    {% if section.settings.show_cta and section.settings.cta_text != blank %}
      <div class="cta-section">
        {% if section.settings.cta_url != blank %}
          <a href="{{ section.settings.cta_url }}"
             {% if section.settings.cta_open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
            <button class="cta-btn">{{ section.settings.cta_text }}</button>
          </a>
        {% else %}
          <button class="cta-btn">{{ section.settings.cta_text }}</button>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>


{% schema %}
