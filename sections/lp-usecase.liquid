<section class="usecase" data-section-type="lp-usecase" data-section-id="{{ section.id }}">
  <div class="container">
    {% if section.settings.section_title != blank or section.settings.section_subtitle != blank %}
      <div class="section-header">
        {% if section.settings.section_title != blank %}
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="usecase-slider">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'usecase_slide' %}
            {% assign fallback_image = 'usecase-bg_' | append: forloop.index | append: '.png' %}
            {% if block.settings.slide_image %}
              {% assign bg_image = block.settings.slide_image | image_url: width: 1920 %}
            {% else %}
              {% assign bg_image = fallback_image | asset_url %}
            {% endif %}
            <div class="usecase-slide {% if forloop.first %}active{% endif %}"
                 style="background-image: url('{{ bg_image }}');"
                 {{ block.shopify_attributes }}>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>

  <div class="usecase-navigation">
    <div class="navigation-controls">
      <button class="slider-controls usecase-prev disabled" aria-label="前のスライド">
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>

      <button class="slider-controls usecase-next" aria-label="次のスライド">
        <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>

    <div class="slider-indicators">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'usecase_slide' %}
            <button class="indicator {% if forloop.first %}active{% endif %} usecase-indicator"
                    aria-label="スライド {{ forloop.index }} に移動"></button>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "LP Use Case Slider",
  "tag": "section",
  "class": "section-lp-usecase",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "USE CASE"
    },
    {
      "type": "text",
      "id": "section_subtitle",
      "label": "Section Subtitle",
      "default": "使用シーン"
    }
  ],
  "blocks": [
    {
      "type": "usecase_slide",
      "name": "Use Case Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "slide_image",
          "label": "Slide Background Image"
        },
        {
          "type": "text",
          "id": "slide_title",
          "label": "Slide Title (for accessibility)",
          "info": "This won't be displayed but helps with screen readers"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LP Use Case Slider",
      "blocks": [
        {
          "type": "usecase_slide",
          "settings": {
            "slide_title": "Work Environment"
          }
        },
        {
          "type": "usecase_slide",
          "settings": {
            "slide_title": "Study Environment"
          }
        },
        {
          "type": "usecase_slide",
          "settings": {
            "slide_title": "Sleep Environment"
          }
        },
        {
          "type": "usecase_slide",
          "settings": {
            "slide_title": "Entertainment Environment"
          }
        }
      ]
    }
  ]
}
{% endschema %}