{% comment %}
  LP CTA Button Snippet

  Usage:
  {% render 'lp-cta-button',
    text: 'Button Text',
    url: 'https://example.com',
    class: 'lp-hero__btn',
    open_new_tab: true
  %}
{% endcomment %}

{% if text %}
  {% if url %}
    <a href="{{ url }}"
       {% if open_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}>
      <button class="{{ class | default: 'lp-hero__btn' }}">{{ text }}</button>
    </a>
  {% else %}
    <button class="{{ class | default: 'lp-hero__btn' }}">{{ text }}</button>
  {% endif %}
{% endif %}