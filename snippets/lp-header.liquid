{% comment %}
  LP Header Snippet

  Usage:
  {% render 'lp-header',
    logo_image: settings.logo,
    login_text: 'ログイン／会員登録',
    login_url: '#'
  %}
{% endcomment %}

<header class="header">
  <div class="header-content">
    <div class="logo">
      {% if logo_image %}
        <img src="{{ logo_image | image_url: width: 200 }}"
             srcset="{{ logo_image | image_url: width: 100 }} 100w,
                     {{ logo_image | image_url: width: 200 }} 200w,
                     {{ logo_image | image_url: width: 300 }} 300w"
             sizes="(max-width: 767px) 100px, 200px"
             alt="{{ logo_image.alt | default: shop.name }}"
             width="{{ logo_image.width | default: 200 }}"
             height="{{ logo_image.height | default: 80 }}"
             loading="eager"
             decoding="async">
      {% else %}
        <img src="{{ 'logo.png' | asset_url }}"
             alt="{{ shop.name | default: 'Logo' }}"
             width="200"
             height="80"
             loading="eager"
             decoding="async">
      {% endif %}
    </div>

    {% if login_text and login_url %}
      <a href="{{ login_url }}" class="login-btn" aria-label="{{ login_text }}">
        {{ login_text }}
      </a>
    {% endif %}

    <button class="mobile-menu-btn" aria-label="メニュー">
      <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>
</header>